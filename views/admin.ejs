<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/styles.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ"
      crossorigin="anonymous"
    />
    <script src="https://kit.fontawesome.com/46ed15a972.js" crossorigin="anonymous"></script>
    <title>Admin</title>
  </head>
  <body>
    <%- include("partials/navbar") %>
    <main class="container">
      <div>
        <div class="d-flex justify-content-between align-items-center">
          <h1 class="m-5 text-white">Listado de usuarios</h1>
          <a href="/usuarios/crear" class="btn btn-success">Nuevo</a>
        </div>
        <table class="table table-bordered mb-5 text-white">
          <thead>
            <tr>
              <th scope="col">Id</th>
              <th scope="col">Title</th>
              <th scope="col">Content</th>
              <th scope="col">Image</th>
              <th scope="col">Created at</th>
              <th scope="col">Author</th>
              <th scope="col">Acciones</th>
            </tr>
          </thead>
          <tbody>
            <% for (const article of articles){ %>
            <tr>
              <td><%= article.id %></td>
              <td><a href="/articulos/<%= article.id %>"><%= article.title %></a></td>
              <td><%= article.content.slice(0, 120) %></td>
              <td><%= article.image %></td>
              <td><%= article.createdAt.toLocaleString() %></td>
              <td><%= article.user.firstname %> <%= article.user.lastname %></td>
              <td>
                <a class="btn btn-primary m-1" href="<%= article.id %>/editar">Editar</a>
                <a class="btn btn-danger m-1" href="/<%= article.id %>">Eliminar</a>
              </td>
            </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </main>

    <%- include("partials/footer") %>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
