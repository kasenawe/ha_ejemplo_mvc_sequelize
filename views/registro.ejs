<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
  </head>

  <body>
    <%- include("./partials/navbar.ejs") %>

    <div class="container">
      <div class="shadow rounded m-5 p-4" id="contenedor">
        <div class="">
          <h3 class="text-muted">Registro</h3>
        </div>
        <hr />
        <form method="post" action="/usuarios/registro">
          <label for="firstname" class="mb-2 text-muted fw-bold">Nombre</label>
          <input
            type="text"
            id="firstname"
            name="firstname"
            class="form-control mb-3"
            placeholder="Ingrese su nombre.."
          />
          <label for="lastname" class="mb-2 text-muted fw-bold">Apellido</label>
          <input
            type="text"
            id="lastname"
            name="lastname"
            class="form-control mb-3"
            placeholder="Ingrese su apellido.."
          />

          <label for="email" class="mb-2 text-muted fw-bold">Correo</label>
          <input
            autofocus
            type="email"
            id="email"
            name="email"
            class="form-control mb-2"
            placeholder="Ingrese su correo.."
          />
          <label for="password" class="mb-2 text-muted fw-bold">Contraseña</label>
          <input
            type="password"
            id="password"
            name="password"
            class="form-control mb-3"
            placeholder="Ingrese una contraseña.."
          />

          <button class="btn btn-success mb-3 mt-3" type="submit">Crear</button>
        </form>
      </div>
      <div class="ms-5">
        <a class="ms-4" href="/admin">Return</a>
      </div>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
